{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@__tests__/*": ["../__tests__/*"],
      "@assets/*": ["assets/*"],
      "@features/*": ["features/*"],
      "@components/*": ["core/components/*"],
      "@constants/*": ["core/constants/*"],
      "@helpers/*": ["core/helpers/*"],
      "@hooks/*": ["core/hooks/*"],
      "@i18n/*": ["core/i18n/*"],
      "@navigation/*": ["core/navigation/*"],
      "@store/*": ["core/store/*"],
      "@theme/*": ["core/theme/*"],
      "@types/*": ["core/types/*"],
      "@utils/*": ["core/utils/*"],
      "@app": ["App.tsx"],
      "@env": ["../node_modules/react-native-dotenv"]
    }
  },
  "include": [
    "src/**/*",
    "index.js",
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    ".bundle",
    "android",
    "ios",
    "**/node_modules",
    "**/Pods",
    "vendor",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "coverage",
    "tsconfig.json",
    ".github",
    ".husky",
    ".vscode",
    ".lintstagedrc.mjs",
    "commitlint.config.mjs"
  ]
}
